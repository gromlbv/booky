{% macro calendar_view(year=2025, month=9) %}
{% set month_names = {
    1: 'January', 2: 'February', 3: 'March', 4: 'April', 
    5: 'May', 6: 'June', 7: 'July', 8: 'August', 
    9: 'September', 10: 'October', 11: 'November', 12: 'December'
} %}

{% set current_month_name = month_names[month] %}
{% set prev_month = month - 1 if month > 1 else 12 %}
{% set prev_year = year if month > 1 else year - 1 %}
{% set next_month = month + 1 if month < 12 else 1 %}
{% set next_year = year if month < 12 else year + 1 %}

<div class="head">
    <h3>{{ current_month_name }} {{ year }}</h3>
    <div class="arrows">
        <button 
            id="calendar-arrow-left"
            data-year="{{ prev_year }}" 
            data-month="{{ prev_month }}"
            data-localize-attr="data-description:previous_month"
            data-description="Previous month"
            hx-get="/calendar/{{ prev_year }}/{{ prev_month }}"
            hx-target=".right-side.calendar"
            hx-swap="innerHTML">
            <svg class="secondary-color" style="transform: rotate(180deg);" xmlns="http://www.w3.org/2000/svg" width="9" height="16" viewBox="0 0 9 16" fill="none"><path d="M1 14.5L7.75 7.75L1 1" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </button>
        <button 
            id="calendar-arrow-right"
            data-localize-attr="data-description:next_month"
            data-description="Next month"
            data-year="{{ next_year }}" 
            data-month="{{ next_month }}"
            hx-get="/calendar/{{ next_year }}/{{ next_month }}"
            hx-target=".right-side.calendar"
            hx-swap="innerHTML">
            <svg class="secondary-color" xmlns="http://www.w3.org/2000/svg" width="9" height="16" viewBox="0 0 9 16" fill="none"><path d="M1 14.5L7.75 7.75L1 1" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/></svg>
        </button>
    </div>
</div>

<div class="calendar-grid" style="overflow: hidden;">
    <div class="weekdays">
        <button class="weekday" tabindex="-1" data-localize-attr="data-description:monday" data-description="Monday" disabled>Mo</button>
        <button class="weekday" tabindex="-1" data-localize-attr="data-description:tuesday" data-description="Tuesday" disabled>Tu</button>
        <button class="weekday" tabindex="-1" data-localize-attr="data-description:wednesday" data-description="Wednesday" disabled>We</button>
        <button class="weekday" tabindex="-1" data-localize-attr="data-description:thursday" data-description="Thursday" disabled>Th</button>
        <button class="weekday" tabindex="-1" data-localize-attr="data-description:friday" data-description="Friday" disabled>Fr</button>
        <button class="weekday" tabindex="-1" data-localize-attr="data-description:saturday" data-description="Saturday" disabled>Sa</button>
        <button class="weekday" tabindex="-1" data-localize-attr="data-description:sunday" data-description="Sunday" disabled>Su</button>
    </div>
    
    <div class="days" 
         hx-get="/api/calendar/{{ year }}/{{ month }}" 
         hx-trigger="load, calendarNav from:body, day:click"
         hx-target="this"
         hx-swap="innerHTML">
            {% for i in range(30) %}
                {% if i == 0 or i == 1 %}
                    <button class="day empty" disabled></button>
                {% else %}
                    <button class="day loading" disabled>{{ i - 1 }}</button>
                {% endif %}
            {% endfor %}
    </div>
</div>

{% endmacro %}
